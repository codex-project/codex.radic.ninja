{
    "name": "codex/codex",
    "type": "project",
    "description": "The Laravel Framework.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "repositories": [
        {"type": "composer", "url": "https://packages.radic.ninja"}
    ],
    "require": {
        "php": "^7.1.3",
        "beyondcode/laravel-self-diagnosis": "^1.0",
        "codex/core": "~2.0",
        "codex/algolia-search": "~2.0",
        "codex/auth": "~2.0",
        "codex/blog": "~2.0",
        "codex/comments": "~2.0",
        "codex/filesystems": "~2.0",
        "codex/git": "~2.0",
        "codex/packagist": "~2.0",
        "codex/phpdoc": "~2.0",
        "codex/sitemap": "~2.0",
        "doctrine/dbal": "^2.9",
        "eddiriarte/console-select": "^2.0",
        "fideloper/proxy": "^4.0",
        "jackiedo/dotenv-editor": "^1.0",
        "laravel/framework": "5.7.*",
        "laravel/tinker": "^1.0",
        "spatie/laravel-responsecache": "^4.4"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.5",
        "beyondcode/laravel-dump-server": "^1.0",
        "filp/whoops": "^2.0",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^2.0",
        "phpunit/phpunit": "^7.0"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "clear": [
            "@php artisan optimize:clear --ansi",
            "@php artisan lighthouse:clear-cache --ansi",
            "@php artisan responsecache:clear --ansi"
        ],
        "optimize": [
            "@composer clear",
            "@php artisan route:cache --ansi",
            "@php artisan view:cache --ansi",
            "@php artisan route:cache --ansi"
        ],
        "checks": [
            "@php artisan lighthouse:validate-schema --ansi",
            "@php artisan self-diagnosis --ansi"
        ],
        "ide": [
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "assets": [
            "rm public/vendor -r > /dev/null",
            "@php artisan vendor:publish --tag=public --force --ansi"
        ],
        "env:production": [
            "@composer install --no-dev -o",
            "@php artisan dotenv:set-key APP_ENV production --force --ansi",
            "@composer optimize",
            "@composer checks"
        ],
        "env:development": [
            "@composer install --dev -o",
            "@php artisan dotenv:set-key APP_ENV development --force --ansi",
            "@composer clear",
            "@composer ide",
            "@composer checks"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
